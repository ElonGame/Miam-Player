<?xml version="1.0" encoding="UTF-8"?>
<Installer>
    <Name>Miam-Player</Name>
	
	<RunProgram>@TargetDir@/MiamPlayer.exe</RunProgram>
	<RunProgramDescription>Launch MiamPlayer!</RunProgramDescription>
	
    <Version>0.6.13</Version>
    <Title>Miam-Player Installer</Title>
	<InstallerApplicationIcon>mp</InstallerApplicationIcon>
	<InstallerWindowIcon>installerWindowIcon.png</InstallerWindowIcon>
	<Logo>logo.png</Logo>
    <Publisher>Matthieu Bachelier</Publisher>
    <StartMenuDir>Miam-Player</StartMenuDir>
	<AllowNonAsciiCharacters>true</AllowNonAsciiCharacters>
	<AllowSpaceInPath>true</AllowSpaceInPath>
	<UninstallerName>Uninstall MiamPlayer</UninstallerName>
	<ProductUrl>http://sourceforge.net/projects/miammusicplayer/</ProductUrl>
	<TargetDir>@ApplicationsDir@\MiamPlayer</TargetDir>
	<AdminTargetDir>@ApplicationsDir@\MiamPlayer</AdminTargetDir>
	<RepositorySettingsPageVisible>false</RepositorySettingsPageVisible>
</Installer>